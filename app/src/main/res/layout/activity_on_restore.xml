<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".bug.OnRestoreActivity"
    >
  <Button
      android:id="@+id/bundle1_btn"
      android:layout_width="0dp"
      android:layout_height="wrap_content"
      android:text="save bundle1(crash)"
      app:layout_constraintTop_toTopOf="parent"
      app:layout_constraintLeft_toLeftOf="parent"
      android:layout_marginTop="100dp"
      />
 <Button
     android:id="@+id/bundle2_btn"
     android:layout_width="0dp"
     android:layout_height="wrap_content"
     android:text="save bundle2(crash)"
     android:layout_marginLeft="@dimen/activity_horizontal_margin"
     app:layout_constraintBaseline_toBaselineOf="@id/bundle1_btn"
     app:layout_constraintLeft_toRightOf="@id/bundle1_btn"
     />

  <Button
      android:id="@+id/savedstate1_btn"
      android:layout_width="0dp"
      android:layout_height="wrap_content"
      android:text="SavedState1"
      app:layout_constraintTop_toBottomOf="@id/bundle1_btn"
      app:layout_constraintLeft_toLeftOf="parent"
      android:layout_marginTop="@dimen/activity_horizontal_margin"
      />
  <Button
      android:id="@+id/savedstate2_btn"
      android:layout_width="0dp"
      android:layout_height="wrap_content"
      android:text="SavedState2"
      app:layout_constraintBaseline_toBaselineOf="@id/savedstate1_btn"
      app:layout_constraintLeft_toLeftOf="@id/bundle2_btn"
      />
 <FrameLayout
     android:id="@+id/content"
     android:layout_width="0dp"
     android:layout_height="match_parent"
     app:layout_constraintLeft_toLeftOf="parent"
     app:layout_constraintRight_toRightOf="parent"
     app:layout_constraintTop_toTopOf="parent"
     app:layout_constraintBottom_toBottomOf="parent"
     />
</android.support.constraint.ConstraintLayout>